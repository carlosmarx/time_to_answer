<div class="col-lg-4 col-md-6 col-sm-8 ml-auto mr-auto">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="card card-login card-hidden">
    <div class="card-header card-header-rose text-center">
      <h4 class="card-title">Cadastrar-se</h4>
    </div>

    <div class="card-body ">

    <ul>
    <% unless resource.errors.empty? %>
      <% resource.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %> 
    <% end %>
    </ul>

      <div class="bmd-form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="material-icons">email</i>
            </span>
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email...", class:"form-control" %>
        </div>
      </div>

      <div class="bmd-form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="material-icons">lock_outline</i>
            </span>
          </div>
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Senha..." %>
        </div>
      </div>

      <div class="bmd-form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="material-icons">lock_outline</i>
            </span>
          </div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Confirmar senha..." %>
        </div>
      </div>

    </div> 
    <div class="card-footer justify-content-center">
      <%= f.submit "Confirmar Cadastro", class:"btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>
