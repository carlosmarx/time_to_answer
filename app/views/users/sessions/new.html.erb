<div class="col-lg-4 col-md-6 col-sm-8 ml-auto mr-auto">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="card card-login card-hidden">
      <div class="card-header card-header-rose text-center">
        <h4 class="card-title">Login - User</h4>
        
      </div>
      <div class="card-body ">
          <div class="bmd-form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="material-icons">email</i>
                </span>
              </div>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email...", class:"form-control" %>
            </div>
          </div>

          <div class="bmd-form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="material-icons">lock_outline</i>
                </span>
              </div>
              <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Password..." %>
            </div>
          </div>
          <% if devise_mapping.rememberable? %>
            <hr />
            <div class="bmd-form-group">
                
                <div class="form-check">
                  <label class="form-check-label">
                  <%= f.check_box :remember_me, class:"form-check-input", type:"checkbox"  %> Lembrar-me
                  <span class="form-check-sign">
                      <span class="check"></span>
                  </span>
                  </label>
                </div>

            </div>
          <% end %>

      </div>
      <div class="card-footer justify-content-center">
        <%= f.submit "Log in", class:"btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>