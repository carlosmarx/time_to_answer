 <!-- Page Heading -->
  <h1 class="h3 mb-4 text-gray-800">Listando Administradores</h1>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Listagem de adminstradores</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                        <th>
                          <%= link_to new_admins_backoffice_admin_path,  class:"btn btn-success btn-icon-split" do %>
                              <span class="icon text-white-50">
                                  <i class="fas fa-plus"></i>
                              </span>
                              <span class="text">Add Admin</span>
                          <% end %>
                        </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                        <th>
                          <a href="#" class="btn btn-success btn-icon-split">
                              <span class="icon text-white-50">
                                  <i class="fas fa-plus"></i>
                              </span>
                              <span class="text">Add Admin</span>
                          </a>
                        </th>
                    </tr>
                </tfoot>
                <tbody>
                  <% @admins.each do |admin| %>
                    <tr>
                        <td><%= admin.id %></td>
                        <td> <%= admin.email %> </td>
                        <td>
                          <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle btn-sm" do %>
                            <i class="fas fa-fw fa-edit"></i>
                          <% end %>

                          <a href="#" class="btn btn-info btn-circle btn-sm">
                            <i class="fas fa-fw fa-eye"></i>
                          </a>

                          <a href="#" class="btn btn-danger btn-circle btn-sm">
                            <i class="fas fa-fw fa-trash"></i>
                          </a>
                        </td>
                    </tr>
                  <% end %>
                   
                </tbody>
            </table>
        </div>
    </div>
</div>