 <!-- Page Heading -->
  <h1 class="h3 mb-4 text-gray-800"> <%= "#{action_title} Assunto/Área"%></h1>

<% if @subject.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <ul>
        <% @subject.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
        <% end %>
    </ul>
    </div>
<% end %>

<%= form_with(model: [:admins_backoffice, @subject]) do |form| %>

<div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class:"form-control", placeholder: "Descrição do Assunto/Área"%>
</div>

<div class="form-group">
    <button class="btn btn-success"> Salvar Assunto/Área </button>
</div>

<% end %>