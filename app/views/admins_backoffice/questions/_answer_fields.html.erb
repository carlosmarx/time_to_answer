<div class="nested-fields">
  <div class="form-row">
    
    <div class="field form-group col-md-8">
      <%= f.text_field :description, class:"form-control" %>
    </div>
    
    <div class="field form-group col-md-1">
      <div class="custom-control custom-checkbox small">
        <%= f.check_box :correct, class:"custom-control-input", type:"checkbox" %>
        <%= f.label :correct, class:"custom-control-label"%>
      </div>
    </div>

    <div class="form-group col-md-3">
      <%= link_to_remove_association "REMOVER RESPOSTA", f, class:"btn btn-block btn-danger" %>
    </div>

  </div>
</div>  