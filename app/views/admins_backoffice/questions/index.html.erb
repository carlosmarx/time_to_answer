 <!-- Page Heading -->
  <h1 class="h3 mb-4 text-gray-800">Listando Perguntas</h1>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Listagem de Perguntas</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th> <%= translate_attribute(@questions, :id) %> </th>
                        <th> <%= translate_attribute(@questions, :description) %> </th>
                        <th> <%= translate_attribute(@questions, :subject) %> </th>
                        <th>
                          <%= link_to new_admins_backoffice_question_path,  class:"btn btn-success btn-icon-split" do %>
                              <span class="icon text-white-50">
                                  <i class="fas fa-plus"></i>
                              </span>
                              <span class="text">Add Pergunta</span>
                          <% end %>
                        </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Id</th>
                        <th> <%= translate_attribute(@questions, :description) %> </th>
                        <th> <%= translate_attribute(@questions, :subject) %> </th>
                        <th>
                           <%= link_to new_admins_backoffice_question_path,  class:"btn btn-success btn-icon-split" do %>
                              <span class="icon text-white-50">
                                  <i class="fas fa-plus"></i>
                              </span>
                              <span class="text">Add Pergunta</span>
                          <% end %>
                        </th>
                    </tr>
                </tfoot>
                <tbody>
                  <% @questions.each do |question| %>
                    <tr>
                        <td><%= question.id %></td>
                        <td> <%= question.description.truncate(50) %> </td>
                        <td> <%= question.subject.description.truncate(30) %> </td>
                        <td>
                          <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary btn-circle btn-sm" do %>
                            <i class="fas fa-fw fa-edit"></i>
                          <% end %>

                          <%= link_to admins_backoffice_question_path(question), class:"btn btn-info btn-circle btn-sm" do %>
                            <i class="fas fa-fw fa-eye"></i>
                          <% end %>

                          <%= link_to admins_backoffice_question_path(question), class:"btn btn-danger btn-circle btn-sm", method: :delete, data: { confirm: "Tem certeza que quer deletar?" } do %>
                            <i class="fas fa-fw fa-trash"></i>
                          <% end %>
                        </td>
                    </tr>
                  <% end %>
                   
                </tbody>
            </table>
        </div>
        <div class="justify-content-center align-items-center row">
          <%= paginate @questions, theme: 'twitter-bootstrap-4' %>
        </div>
    </div>
</div>
