var btn_element = document.getElementById('submit_<%= @answer.question_id %>')

console.log(btn_element)

btn_element.classList.remove('btn-secondary')
btn_element.classList.remove('btn-success')
btn_element.classList.remove('btn-danger')

if(<%= @answer.correct %>){
  btn_element.classList.add('btn-success')
  Swal.fire({
    position: 'top-end',
    icon: 'success',
    title: 'Parabéns! Você acertou!',
    showConfirmButton: false,
    timer: 1500
  })
}

else{
  btn_element.classList.add('btn-danger')
  Swal.fire({
    position: 'top-end',
    icon: 'error',
    title: 'Ops! Você errou, tente novamente!',
    showConfirmButton: false,
    timer: 1500
  })
}