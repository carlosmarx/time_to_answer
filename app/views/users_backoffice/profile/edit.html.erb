<%= form_with(url: users_backoffice_profile_path, model: @user) do |form| %>
  <div class="card ">
    <div class="card-header card-header-rose card-header-icon">
      <div class="card-icon">
        <i class="material-icons">contacts</i>
      </div>
      <h4 class="card-title">Editar Perfil</h4>
    </div>
    <div class="card-body ">
        <div class="row">
          <div class="col-md-12">
            <% if @user.errors.any? %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <ul>
                    <% @user.errors.full_messages.each do |message| %>
                    <li> <%= message %> </li>
                    <% end %>
                </ul>
                </div>
            <% end %>
          </div>
        </div>

        <div class="row">
          <%= form.label :first_name, class:"col-md-3 col-form-label" %>
          <div class="col-md-9">
            <div class="form-group has-default bmd-form-group">
              <%= form.text_field :first_name, class:"form-control", placeholder: "Nome"%>
            </div>
          </div>
        </div>

        <div class="row">
          <%= form.label :last_name, class:"col-md-3 col-form-label" %>
          <div class="col-md-9">
            <div class="form-group has-default bmd-form-group">
              <%= form.text_field :last_name, class:"form-control", placeholder: "Nome"%>
            </div>
          </div>
        </div>

        <div class="row">
          <%= form.label :email, class:"col-md-3 col-form-label" %>
          <div class="col-md-9">
            <div class="form-group has-default bmd-form-group">
              <%= form.text_field :email, class:"form-control", placeholder: "Seu email"%>
            </div>
          </div>
        </div>

        <%= form.fields_for :user_profile, @user.user_profile do |profile_form| %>
          <div class="row">
            <%= profile_form.label :address, class:"col-md-3 col-form-label" %>
            <div class="col-md-9">
              <div class="form-group has-default bmd-form-group">
                <%= profile_form.text_field :address, class:"form-control", placeholder: "Seu endereço"%>
              </div>
            </div>
          </div>

          <div class="row">
            <%= profile_form.label :gender, class:"col-md-3 col-form-label" %>
            <div class="col-md-9">
              <div class="form-group has-default bmd-form-group">
                <div class="form-check">
                  <label class="form-check-label">
                    <%= profile_form.radio_button :gender, 'M', class:"form-check-input" %> Masculino
                    <span class="circle">
                      <span class="check"></span>
                    </span>
                  </label>
                </div>

                <div class="form-check">
                  <label class="form-check-label">
                    <%= profile_form.radio_button :gender, 'F', class:"form-check-input" %> Feminino
                    <span class="circle">
                      <span class="check"></span>
                    </span>
                  </label>
                </div>

                <div class="form-check">
                  <label class="form-check-label">
                    <%= profile_form.radio_button :gender, 'O', class:"form-check-input" %> Outro
                    <span class="circle">
                      <span class="check"></span>
                    </span>
                  </label>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <%= profile_form.label :birthdate, class:"col-md-3 col-form-label" %>
            <div class="col-md-9">
              <div class="form-group has-default bmd-form-group">
                <%= profile_form.date_field :birthdate, class:"form-control", placeholder: "Seu email"%>
              </div>
            </div>
          </div>
        <% end %>

        <div class="row">
          <%= form.label :password, class:"col-md-3 col-form-label" %>
          <div class="col-md-9">
            <div class="form-group has-default bmd-form-group">
              <%= form.password_field :password, class:"form-control", placeholder: "Senha"%>
            </div>
          </div>
        </div>

        <div class="row">
          <%= form.label :password_confirmation, class:"col-md-3 col-form-label" %>
          <div class="col-md-9">
            <div class="form-group has-default bmd-form-group">
              <%= form.password_field :password_confirmation, class:"form-control", placeholder: "Confirmação de senha"%>
            </div>
          </div>
        </div>
        
    </div>
    <div class="card-footer ">
      <div class="row">
        <div class="col-md-9">
          <%= form.submit "Salvar", class:"btn btn-fill btn-rose" %>
        </div>
      </div>
    </div>
  </div>
<% end %>